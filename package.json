{
  "name": "todoapplication",
  "version": "1.0.0",
  "description": "A todo Application",
  "main": "app.js",
  "scripts": {
    "pretest": "yarn clean && cross-env NODE_ENV=test knex migrate:latest",
    "test": "jest --coverage --forceExit",
    "start": "yarn build && node ./dist/app.js",
    "start:dev": "nodemon server/app.js --exec babel-node",
    "build": "npm run clean && babel ./server -d dist",
    "clean": "rm -rf dist && yarn rollback && yarn migrate",
    "migrate": "knex migrate:latest",
    "rollback": "knex migrate:rollback"
  },
  "author": "Obasaju Joshua",
  "license": "MIT",
  "dependencies": {
    "@sendgrid/mail": "^6.3.1",
