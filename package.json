    "@babel/runtime": "^7.3.4",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.3.1",
    "babel-polyfill": "^6.26.0",
    "eslint": "^5.15.1",
    "eslint-config-airbnb-base": "^13.1.0",
