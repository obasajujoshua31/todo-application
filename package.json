    "bookshelf-uuid": "^1.0.0",
    "cors": "^2.8.5",
    "cross-env": "^5.2.0",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "express-validator": "^5.3.1",
    "express-validators": "^1.0.4",
    "faker": "^4.1.0",
    "jsonwebtoken": "^8.5.0",
    "knex": "^0.16.3",
    "kue": "^0.11.6",
    "lodash": "^4.17.19",
    "lodash.isempty": "^4.4.0",
    "mailgen": "^2.0.7",
    "passport": "^0.4.0",
    "passport-google-oauth2": "^0.2.0",
